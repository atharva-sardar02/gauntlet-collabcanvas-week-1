rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Canvas collection - allow authenticated users to read/write
    match /canvas/{document=**} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;
      
      // Allow write access to all authenticated users
      allow write: if request.auth != null;
    }
    
    // Color palettes collection - user-specific palettes
    match /colorPalettes/{paletteId} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;
      // Allow create if user owns the palette
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid;
      // Allow update/delete only if user owns the palette
      allow update, delete: if request.auth != null 
        && resource.data.userId == request.auth.uid;
    }
    
    // User preferences (including color preferences)
    match /users/{userId}/preferences/{prefId} {
      // Allow read/write only for the user's own preferences
      allow read, write: if request.auth != null 
        && request.auth.uid == userId;
    }
    
    // Default: deny all access to other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

